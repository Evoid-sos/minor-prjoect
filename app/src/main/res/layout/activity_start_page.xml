<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg3"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".start_page">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="200dp"
        android:paddingBottom="10dp"
        app:cardBackgroundColor="#222222"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/forgotPasswordStart"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="180dp"
            android:layout_marginTop="260dp"
            android:layout_marginBottom="5dp"
            android:background="#222222"
            android:text="forgot password ?"
            android:textColor="#ff4500" />

        <ImageView
            android:id="@+id/showHideStart"
            android:layout_width="22dp"
            android:layout_height="43dp"
            android:layout_marginLeft="320dp"
            android:layout_marginTop="180dp"
            android:clickable="true"
            android:visibility="visible"
            app:srcCompat="@drawable/eye" />

        <ImageView
            android:id="@+id/showHide2Start"
            android:layout_width="22dp"
            android:layout_height="43dp"
            android:layout_marginLeft="320dp"
            android:layout_marginTop="180dp"
            android:clickable="true"
            android:visibility="invisible"
            app:srcCompat="@drawable/eyecl" />

        <Button
            android:id="@+id/loginStart"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="260dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/button_rounded_corners"
            android:text="@string/login"
            android:textColor="#ffffff" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/contact_pl" />

        <EditText
            android:id="@+id/emailIdStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="120dp"
            android:layout_marginRight="30dp"
            android:backgroundTint="#80ffffff"
            android:hint="@string/Email_id"
            android:inputType="textEmailAddress"
            android:textColor="#FFFFFF"
            android:textColorHint="#80ffffff"></EditText>

        <EditText
            android:id="@+id/passwordStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="180dp"
            android:layout_marginRight="30dp"
            android:backgroundTint="#80ffffff"
            android:hint="@string/Password"
            android:inputType="textPassword"
            android:textColor="#FFFFFF"
            android:textColorHint="#80ffffff"></EditText>



    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/registerStart"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/register_rounded_corners"
        android:text="Register"
        android:textColor="#80ffffff"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />

</androidx.constraintlayout.widget.ConstraintLayout>